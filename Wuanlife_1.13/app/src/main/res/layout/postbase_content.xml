<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/postBase_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:textColor="@color/Black"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"/>
    <LinearLayout
        android:id="@+id/postBase_linear"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/postBase_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/textColor"
            android:background="@color/white"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/postBase_NG"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:text="发表于"
            android:textColor="@color/textColor"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/postBase_groupName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:background="@color/white"/>
        <TextView
            android:id="@+id/postBase_createTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:gravity="right|center_vertical"
            android:textColor="@color/textColor"
            android:background="@color/white" />
    </LinearLayout>
    <TextView
        android:id="@+id/postBase_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:textColor="@color/Black"
        android:background="@color/white" />
    <LinearLayout
        android:id="@+id/postDetail_image_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <include layout="@layout/postbase_reply"/>

</LinearLayout>